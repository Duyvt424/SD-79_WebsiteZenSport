	<style>
		.badge:after {
			content: attr(value);
			font-size: 10px;
			color: #fff;
			background: black;
			border-radius: 20%;
			padding: 0 5px;
			position: relative;
			left: -23px;
			top: 0px;
			opacity: 0.9;
		}
		.paste-button {
			position: relative;
			display: block;
		}
		.button {
			color: #212121;
			font-weight:bold;
			padding: 10px 15px;
			border: 2px solid transparent;
			border-radius: 15px;
			cursor: pointer;
		}
		.dropdown-content {
			display: none;
			font-size: 13px;
			position: absolute;
			z-index: 1;
			min-width: 200px;
			background-color: #fff;
			border-radius: 0px 15px 15px 15px;
			box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
		}
			.dropdown-content a {
				padding: 8px 10px;
				text-decoration: none;
				display: block;
				transition: 0.1s;
				color:black;
			}

				.dropdown-content a:hover {
					background-color: lightgray;
					border-radius: 0px 15px 15px 15px;
				}

			.dropdown-content #top:hover {
				border-radius: 0px 13px 0px 0px;
			}

			.dropdown-content #bottom:hover {
				border-radius: 0px 0px 13px 13px;
			}

		.paste-button:hover button {
			border-radius: 15px 15px 0px 0px;
		}

		.paste-button:hover .dropdown-content {
			display: block;
		}

	</style>
</head>
<body>
