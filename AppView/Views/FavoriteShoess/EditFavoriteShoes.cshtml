@model AppData.Models.FavoriteShoes

@{
    ViewData["Title"] = "EditFavoriteShoes";
}

<link rel="stylesheet" href="~/css/FormInput.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="container">
    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="">
                            <div class="card-body p-5">
                                <img src="/image/Logo_NIKE.svg.png" alt="" style="width: 55px; height: 20px; margin-left: 250px;">
                                <h2 class="text-uppercase text-center mb-5" style="padding-top: 25px; font-weight: bold;">
                                    BECOME A
                                    NIKE MEMBER
                                </h2>
                                <p style="text-align: center; font-size: 14px;">
                                    Create your Nike Member profile and
                                    get first <br> access to the very best of Nike products, inspiration <br> and
                                    community.
                                </p>
                                    <form asp-action="EditFavoriteShoes">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-floating mb-3">
                                        <select asp-for="FavoriteID" class="form-control" asp-items="@ViewBag.ShoesDTList"></select>
                                        <label for="floatingInputEmail">Mã đôi giày yêu thích</label>
                                        <span asp-validation-for="FavoriteID" class="text-danger"></span>
                                        </div>
                                        
                                       <div class="form-floating mb-3">
                                        <select asp-for="ShoesDetailsId" class="form-control" asp-items="@ViewBag.ShoesDTList"></select>
                                        <label for="floatingInputEmail">Mã giày chi tiết</label>
                                        <span asp-validation-for="ShoesDetailsId" class="text-danger"></span>
                                    </div>
                                         <div class="form-floating mb-3">
                                        <select asp-for="CumstomerID" class="form-control" asp-items="@ViewBag.CustomerList"></select>
                                        <label for="floatingInputEmail">CustumorName</label>
                                        <span asp-validation-for="CumstomerID" class="text-danger"></span>
                                     <div class="d-flex justify-content-center" style="padding-top:5px;">
                                        <button type="submit" value="Create"
                                                style="color: white; background-color: rgb(3, 3, 3); width: 520px; height: 40px;"
                                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            <p style="color: white; font-size: 15px; text-decoration: none;">Update</p>
                                        </button>
                                    </div>
                                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
