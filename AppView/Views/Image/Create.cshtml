@model AppData.Models.Image

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/FormInput.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="container">
    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="">
                            <div class="card-body p-5">
                                <img src="/image/Logo_NIKE.svg.png" alt="" style="width: 55px; height: 20px; margin-left: 250px;">
                                <h2 class="text-uppercase text-center mb-5" style="padding-top: 25px; font-weight: bold;">
                                    BECOME A
                                    NIKE MEMBER
                                </h2>
                                <p style="text-align: center; font-size: 14px;">
                                    Create your Nike Member profile and
                                    get first <br> access to the very best of Nike products, inspiration <br> and
                                    community.
                                </p>
                                <form asp-action="Create" enctype="multipart/form-data" style="margin-top:10px;" id="register-form">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Name" required>
                                        <label for="floatingInputUsername">Name</label>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <input type="file" name="imageFile1" class="form-control" accept="image/*" />

                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <input type="file" name="imageFile2" class="form-control" />

                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <input type="file" name="imageFile3" class="form-control" />

                                    </div>

                                    <br />
                                    <div class="form-group">
                                        <input type="file" name="imageFile4" class="form-control" />

                                    </div>
                                    <br />
                                    <div class="form-floating mb-3">
                                        <input asp-for="Status" type="number" class="form-control" placeholder="Trạng thái" required>
                                        <label for="floatingInputUsername">Trạng thái (0 - hoạt động, 1 - ngưng hoạt động)</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="DateCreated" type="datetime-local" class="form-control" placeholder="Ngày tạo" required>
                                        <label for="floatingInputUsername">Ngày tạo</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <select asp-for="ShoesDetailsID" class="form-control" asp-items="@ViewBag.ShoesDTList"></select>
                                        <label for="floatingInputEmail">Chọn giày chi tiết</label>
                                        <span asp-validation-for="ShoesDetailsID" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" value="Create"
                                                style="color: white; background-color: rgb(3, 3, 3); width: 520px; height: 40px;"
                                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            <p style="color: white; font-size: 15px; text-decoration: none;">Add New</p>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>




