@model AppData.Models.BillStatusHistory

@{
    ViewData["Title"] = "CreateBillStatusHistory";
}


<link rel="stylesheet" href="~/css/FormInput.css">
<div class="container">
    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="">
                            <div class="card-body p-5">
                                <img src="/image/Logo_NIKE.svg.png" alt="" style="width: 55px; height: 20px; margin-left: 250px;">
                                <h2 class="text-uppercase text-center mb-5" style="padding-top: 25px; font-weight: bold;">
                                    BECOME A
                                    NIKE MEMBER
                                </h2>
                                <p style="text-align: center; font-size: 14px;">
                                    Create your Nike Member profile and
                                    get first <br> access to the very best of Nike products, inspiration <br> and
                                    community.
                                </p>
                                <form asp-action="CreateBillStatusHistory" style="margin-top:10px;" id="register-form">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Status" type="number" class="form-control" placeholder="Status" required>
                                        <label for="floatingInputUsername">Trạng thái</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="ChangeDate" type="datetime-local" class="form-control" placeholder="Ngày giờ thay đổi" required>
                                        <label for="floatingInputUsername">Ngày giờ thay đổi</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Note" type="text" class="form-control" placeholder="Ghi chú" required>
                                        <label for="floatingInputUsername">Ghi chú</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <select asp-for="BillID" class="form-control" asp-items="@ViewBag.BillList"></select>
                                        <label for="floatingInputEmail">Mã hóa đơn</label>
                                        <span asp-validation-for="BillID" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <select asp-for="EmployeeID" class="form-control" asp-items="@ViewBag.EmployeeList"></select>
                                        <label for="floatingInputEmail">Nhân viên</label>
                                        <span asp-validation-for="EmployeeID" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex justify-content-center" style="padding-top:5px;">
                                        <button type="submit" value="Create"
                                                style="color: white; background-color: rgb(3, 3, 3); width: 520px; height: 40px;"
                                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            <p style="color: white; font-size: 15px; text-decoration: none;">Create</p>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
