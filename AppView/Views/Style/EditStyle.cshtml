@model AppData.Models.Style

@{
    ViewData["Title"] = "EditStyle";
}

<link rel="stylesheet" href="~/css/FormInput.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="container">
    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="">
                            <div class="card-body p-5">
                                <img src="/image/Logo_NIKE.svg.png" alt="" style="width: 55px; height: 20px; margin-left: 200px;">
                                <h2 class="text-uppercase text-center mb-5" style="padding-top: 25px; font-weight: bold;">
                                    EDIT STYLE
                                </h2>
                                <p style="text-align: center; font-size: 14px;">
                                    Welcome to our Edit Style page! Here, you can refine and perfect your shoe designs with ease. With our user-friendly tools and extensive customization options, you have the power to transform your creations into true works of art.
                                </p>
                                <form asp-action="EditStyle">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group" style="display:none;">
                                        <label asp-for="StyleID" class="control-label"></label>
                                        <input asp-for="StyleID" class="form-control" />
                                        <span asp-validation-for="StyleID" class="text-danger"></span>
                                    </div>
                                    <div class="form-group" style="display:none;">
                                        <label asp-for="StyleCode" class="control-label"></label>
                                        <input asp-for="StyleCode" class="form-control" />
                                        <span asp-validation-for="StyleCode" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Name" required>
                                        <label for="floatingInputUsername">Name</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Status" type="number" class="form-control" placeholder="Trạng thái" required>
                                        <label for="floatingInputUsername">Trạng thái (0 - hoạt động, 1 - ngưng hoạt động)</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="DateCreated" type="datetime-local" class="form-control" placeholder="Ngày tạo" required>
                                        <label for="floatingInputUsername">Ngày tạo</label>
                                    </div>
                                    <div class="d-flex justify-content-center" style="padding-top:5px;">
                                        <button type="submit" value="Create"
                                                style="color: white; background-color: rgb(3, 3, 3); width: 520px; height: 40px;"
                                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            <p style="color: white; font-size: 15px; text-decoration: none;">Update</p>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
