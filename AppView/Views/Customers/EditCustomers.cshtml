@model AppData.Models.Customer

@{
    Layout = null;
    ViewData["Title"] = "EditCustomers";
}


@inject IHttpContextAccessor HttpContextAccessor
@{
	var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
		var fullName = HttpContextAccessor.HttpContext.Session.GetString("FullName");
		var email = HttpContextAccessor.HttpContext.Session.GetString("Email");

	var UserId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
	var Password = HttpContextAccessor.HttpContext.Session.GetString("Password");
	var Sex = HttpContextAccessor.HttpContext.Session.GetString("Sex");
	var PhoneNumber = HttpContextAccessor.HttpContext.Session.GetString("PhoneNumber");
}
<link rel="stylesheet" href="~/css/FormInput.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@if (!string.IsNullOrEmpty(ViewData["SuccessMessage"] as string))
{
    <div class="alert alert-success" role="alert">
        @Html.Raw(ViewData["SuccessMessage"])
    </div>
}

@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger" role="alert">
        @Html.Raw(ViewData["ErrorMessage"])
    </div>
}

<div class="container">
 
    <section class="vh-100 bg-image">
        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="">
                            <div class="card-body p-5">
                                <img src="/image/Logo_NIKE.svg.png" alt="" style="width: 55px; height: 20px; margin-left: 250px;">
                                <h2 class="text-uppercase text-center mb-5" style="padding-top: 25px; font-weight: bold;">
                                    BECOME A
                                    NIKE MEMBER
                                </h2>
                                <p style="text-align: center; font-size: 14px;">
                                    Create your Nike Member profile and
                                    get first <br> access to the very best of Nike products, inspiration <br> and
                                    community.
                                </p>
                                <form asp-action="EditCustomer" style="margin-top:10px;" id="register-form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-3" style="display:none;">
                                        <input asp-for="CumstomerID" type="text" class="form-control" placeholder="CumstomerID" required value="@Html.Raw(UserId?.Replace("\"", ""))">
                                        <label for="floatingInputEmail">CumstomerID</label>
                                        <span asp-validation-for="CumstomerID" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="FullName" type="text" class="form-control" placeholder="Password" required>
                                        <label for="floatingInputEmail">FullName</label>
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="UserName" type="text" class="form-control" placeholder="UserName" required>
                                        <label for="floatingInputEmail">UserName</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-floating mb-3">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                                        <label for="floatingInputEmail">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="ResetPassword" type="password" class="form-control" placeholder="Password" required>
                                        <label for="floatingInputEmail">ResetPassword</label>
                                        <span asp-validation-for="ResetPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" type="text" class="form-control" placeholder="Email" required>
                                        <label for="floatingInputEmail">Email address</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Sex" type="number" class="form-control" placeholder="Sex" required>
                                        <label for="floatingInputEmail">Sex</label>
                                        <span asp-validation-for="Sex" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="PhoneNumber" required>
                                        <label for="floatingInputEmail">PhoneNumber</label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Status" type="number" class="form-control" placeholder="Trạng thái" required>
                                        <label for="floatingInputUsername">Trạng thái (0 - hoạt động, 1 - ngưng hoạt động)</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="DateCreated" type="datetime-local" class="form-control" placeholder="Ngày tạo" required>
                                        <label for="floatingInputUsername">Ngày tạo</label>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group" style="display:none;">
                                        <label asp-for="RankID" class="control-label"></label>
                                        <input asp-for="RankID" class="form-control" />
                                        <span asp-validation-for="RankID" class="text-danger"></span>
                                    </div>
                                    @*                                    <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" name="AgreeToTerms" checked />
                                    <label class="form-check-label" for="form2Example3g">
                                    I agree all statements in <a href="#gioithieu" class="text-body"><u>Terms of service</u></a>
                                    </label>
                                    </div>*@
                                    <div class="d-flex justify-content-center">
                                        <button type="submit" value="Create"
                                                style="color: white; background-color: rgb(3, 3, 3); width: 520px; height: 40px;"
                                                class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                            <p style="color: white; font-size: 15px; text-decoration: none;">Update</p>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
