@model IEnumerable<AppData.Models.Size>

@{
    ViewData["Title"] = "GetAllSize";
}

<h1>GetAllSize</h1>

<p>
    <a asp-action="CreateSize">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SizeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SizeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditSize", new {  id=item.SizeID  }) |
                @Html.ActionLink("Details", "DetailsSize", new {  id=item.SizeID }) |
                @Html.ActionLink("Delete", "DeleteSize", new {  id=item.SizeID  })
            </td>
        </tr>
}
    </tbody>
</table>
